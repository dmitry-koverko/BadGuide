<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BottomBarItem">
        <attr name="active" format="boolean" />
        <attr name="android:src" format="integer"/>
        <attr name="size" format="dimension"/>
        <attr name="type" format="enum">
            <enum name="info" value="0"></enum>
            <enum name="feed" value="1"></enum>
            <enum name="refresh" value="2"></enum>
            <enum name="notify" value="3"></enum>
            <enum name="settings" value="4"></enum>
        </attr>
    </declare-styleable>

    <declare-styleable name="ScratchView">
        <attr name="overlayColor" format="color"/>
        <attr name="revealSize" format="dimension"/>
        <attr name="antiAlias" format="boolean"/>
        <attr name="scratchable" format="boolean"/>
        <attr name="scratchDrawable" format="reference"/>
    </declare-styleable>
</resources>