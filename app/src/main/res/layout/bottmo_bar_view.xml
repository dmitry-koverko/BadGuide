<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/slider_default_size">

    <com.kawka.badguide.ui.bottombarview.BottomBarItem
        android:id="@+id/menu_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:type="info"
        app:layout_constraintEnd_toStartOf="@id/menu_item_list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.kawka.badguide.ui.bottombarview.BottomBarItem
        android:id="@+id/menu_item_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/menu_item_refresh"
        app:layout_constraintTop_toTopOf="parent"
        app:type="feed"
        app:layout_constraintStart_toEndOf="@id/menu_item_info"/>

    <com.kawka.badguide.ui.bottombarview.BottomBarItem
        android:id="@+id/menu_item_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/menu_item_facts"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/menu_item_list"
        app:type="refresh"/>


    <com.kawka.badguide.ui.bottombarview.BottomBarItem
        android:id="@+id/menu_item_facts"
        app:layout_constraintEnd_toStartOf="@id/menu_item_settings"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/menu_item_refresh"
        tools:ignore="MissingConstraints"
        app:type="notify"/>

    <com.kawka.badguide.ui.bottombarview.BottomBarItem
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/menu_item_facts"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/menu_item_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:type="settings"/>

</androidx.constraintlayout.widget.ConstraintLayout>